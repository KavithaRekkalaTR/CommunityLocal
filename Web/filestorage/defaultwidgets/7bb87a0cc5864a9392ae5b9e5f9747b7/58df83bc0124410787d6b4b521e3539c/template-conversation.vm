<li class="content-item conversation <% if (!HasRead) { %> unread <% } %>" data-conversationid="<%= Id %>">
    <div class="content conversation">
        <div class="attributes">
            <ul class="attribute-list">
                <li class="attribute-item">
                    <span class="attribute-value"><%= AgoDate %></span>
                </li>
            </ul>
        </div>
        <div class="author">
            <span class="avatar">
                <%= AvatarHtml %>
            </span>
            <span class="user-name">
                <%= ParticipantHtml %>
        	</span>
        </div>
        <div class="content">
            <%= LastMessage.Excerpt %>
        </div>
    </div>
</li>